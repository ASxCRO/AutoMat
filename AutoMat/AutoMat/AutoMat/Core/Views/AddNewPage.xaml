<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoMat.Core.Views.AddNewPage"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material">
    <StackLayout Padding="15">

        <material:MaterialTextField Placeholder="Placeholder" HelperText="Helper Text" ErrorText="Error Text"  InputType="Text" TextColor="#ddd"/>
        <material:MaterialRadioButtonGroup x:Name="radioButtonGroup" Choices="{Binding AirBags}" />
        <material:MaterialCheckboxGroup x:Name="checkBoxGroup" Choices="{Binding AirBags}" />
    </StackLayout>

</ContentPage>